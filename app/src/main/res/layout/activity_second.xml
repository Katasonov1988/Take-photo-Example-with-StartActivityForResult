<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/buttonTakeFromCamera"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="@string/take_photo"
        app:layout_constraintBottom_toTopOf="@id/buttonSetPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <TextView
        android:id="@+id/editTextTextGetUriPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="@string/uri"
        app:layout_constraintBottom_toTopOf="@+id/buttonTakeFromCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFromCamera"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonSetPhoto"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/set_photo"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToSecondActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewFromCamera"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTakeFromCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/buttonGoToSecondActivity"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/go_to_first_activity"
        app:layout_constraintBottom_toTopOf="@id/buttonGoToThirdActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/buttonGoToThirdActivity"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/go_to_third_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>